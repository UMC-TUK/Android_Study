<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_benefit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/content_benefit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이번 주 미션하기"
        android:textSize="15dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintStart_toEndOf="@+id/image_benefit"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_benefit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_han_sans_neo_bold"
        android:text="얼마 받을지 보기"
        android:layout_marginLeft="12dp"
        android:textColor="@color/toss_blue"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/image_benefit"
        app:layout_constraintTop_toBottomOf="@+id/content_benefit" />

</androidx.constraintlayout.widget.ConstraintLayout>