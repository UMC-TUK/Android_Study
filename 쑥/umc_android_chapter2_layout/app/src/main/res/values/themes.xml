<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Umc_android_chapter2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/spoqa_han_sans_neo_medium</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="TextView"
        parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/spoqa_han_sans_neo_medium</item>
    </style>

    <style name="Button"
        parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/spoqa_han_sans_neo_medium</item>
    </style>
</resources>