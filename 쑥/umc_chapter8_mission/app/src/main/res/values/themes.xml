<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Umc_chapter8_mission" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Umc_chapter8_mission" parent="Base.Theme.Umc_chapter8_mission" />

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">20dp</item>
        <item name="android:padding">8dp</item>
        <item name="backgroundTint">@color/green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/green_black</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="EditTextTitle" parent="Widget.AppCompat.EditText">
        <item name="android:hint">@string/title_hint</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/green_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">30</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditTextContext" parent="Widget.AppCompat.EditText">
        <item name="android:hint">@string/context_hint</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/green_black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ItemTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:text">Empty</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/green_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">30</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ItemContext" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:text">Empty</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/green_black</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>