<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Umc_android_chapter4_mission" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">20dp</item>
        <item name="android:text">@string/move_to_second_activity</item>
        <item name="android:padding">8dp</item>
        <item name="backgroundTint">@color/green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/green_black</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="EditTextTitle" parent="Widget.AppCompat.EditText">
        <item name="android:hint">@string/title_hint</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/green_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">20</item>
    </style>

    <style name="EditTextContext" parent="Widget.AppCompat.EditText">
        <item name="android:hint">@string/context_hint</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/green_black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextViewTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/green_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">20</item>
    </style>

    <style name="TextViewContext" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/green_black</item>
    </style>
</resources>